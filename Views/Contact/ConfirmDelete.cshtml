@model ContactModel;
@{
    ViewData["Title"] = "Confirm Delete";
}
<div class="text-center">
    <h3>Are you sure you want to delete the contact (@Model.Name)?</h3>
</div>
<a class="btn btn-danger" role="button" asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.Id">Confirm</a>
<a class="btn btn-warning" role="button" asp-controller="Contact" asp-action="Index">Cancel</a>